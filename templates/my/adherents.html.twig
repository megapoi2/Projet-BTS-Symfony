{% extends 'base.html.twig' %}

{% block body %}

<h1>Adhï¿½rents</h1>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">societe</th>
        <th scope="col">civilite</th>
        <th scope="col">nom</th>
        <th scope="col">prenom</th>
        <th scope="col">email</th>
        <th scope="col">date d'adhesion</th>
        <th scope="col">actif</th>
      </tr>
    </thead>
    {% for NumCol in data %}
    <tr>
        <td>{{ NumCol.id}}</td>
        <td>{{ NumCol.societe}}</td>
        <td>{{ NumCol.civilite}}</td>
        <td>{{ NumCol.nom}}</td>
        <td>{{ NumCol.prenom}}</td>
        <td>{{ NumCol.email}}</td>
        <td>{{ NumCol.date_adhesion}}</td>
        <td>{{ NumCol.actif}}</td>
      </tr>
      {% endfor %}
</table>
<br>

<form action="POST">
    <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Societe</label>
        <input type="text" class="form-control" placeholder="Default input" id="adsociete">
        </div>
        <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Civilite</label>
        <input type="text" class="form-control" placeholder="Default input" id="adcivilite">
        </div>
        <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Nom</label>
        <input type="text" class="form-control" placeholder="Default input" id="adnom">
        </div>
        <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Prenom</label>
        <input type="text" class="form-control" placeholder="Default input" id="adprenom">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
            <input type="email" class="form-control" id="ademail" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Date d'adhesion</label>
        <input type="text" class="form-control" placeholder="Default input" id="addate">
        </div>
        <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Actif</label>
        <input type="text" class="form-control" placeholder="Default input" id="adactif">
        </div>
        <br>
    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>



{% endblock %}